<UserControl x:Class="AstroPhotometry.View.ImageShow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AstroPhotometry.View"
             xmlns:astrophotometry="clr-namespace:AstroPhotometry"
             d:DataContext="{d:DesignInstance Type=astrophotometry:PhotoVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="610">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="155*"/>
            <ColumnDefinition Width="20px"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10px"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" HorizontalAlignment="Center" FontSize="20" Foreground="White" Grid.Row="1" VerticalAlignment="Top" FontWeight="Normal">file name</Label>
        <Image Grid.Column="0" Source="/Assets/test.jpg" Grid.ColumnSpan="3"   Grid.Row="2" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
